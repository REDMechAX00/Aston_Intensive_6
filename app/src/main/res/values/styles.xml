<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="PrimaryBigText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="SecondaryNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="BaseRecyclerViewButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="ContactItem.TextViewFullName" parent="PrimaryNormalText">
        <item name="android:layout_marginStart">@dimen/app_margin</item>
    </style>

    <style name="ContactItem.TextViewPhone" parent="SecondaryNormalText">
        <item name="android:layout_marginStart">@dimen/app_margin</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="Toolbar.Text" parent="PrimaryNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="Toolbar.Title" parent="Toolbar.Text">
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.BaseButton">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <style name="Toolbar.EditTextSearch" parent="Toolbar.Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="ContactDetails.BaseEditText" parent="PrimaryBigText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
    </style>

    <style name="Contacts.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textAppearance">@style/PrimaryNormalText</item>
    </style>

    <style name="ContactDetails.EditTextName" parent="ContactDetails.BaseEditText">
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="ContactDetails.EditTextSurname" parent="ContactDetails.BaseEditText">
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="ContactDetails.EditTextPhone" parent="ContactDetails.BaseEditText">
        <item name="android:inputType">phone</item>
    </style>
</resources>